<%= form_for(@routine_control) do |f| %>
  <% if @routine_control.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@routine_control.errors.count, "error") %> prohibited this routine_control from being saved:</h2>

      <ul>
      <% @routine_control.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :enabled %><br>
    <%= f.check_box :enabled %>
  </div>
  <div class="field">
    <%= f.label :monthly %><br>
    <%= f.check_box :monthly %>
  </div>
  <%= f.collection_check_boxes :robot_ids, @robots, :id, :identifier do |b| %>
    <div class="collection-check-box">
      <%= b.check_box %>
      <%= b.label %>
    </div>
  <% end %>
  <% @week_days.each do |day| %>
    <%= f.label day %>
    <%= check_box :week,day,{checked: @checked_days[day.to_sym]}, 'true','false'  %>
  <% end %>

  <%= time_select :routines, :time %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
