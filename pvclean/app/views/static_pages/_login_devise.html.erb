<% if user_signed_in? %>
  <li>
  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>

  </li>
<% else %>
  <li>
   <a href="#" class="dropdown-toggle" data-toggle="dropdown"><b>Login</b> <span class="caret"></span></a>
    <ul id="login-dp" class="dropdown-menu">
        <li>
             <div class="row">
                    <div class="col-md-12">
                         <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                            <div class="form-group">
                              <div class=" inputGroupContainer">
                                <div class="input-group">
                                  <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                                  <div class="field">
                                    <div class="field">
                                      <% f.label :email, "Email" %>
                                      <%= f.email_field :email,class: "form-control", autofocus: true, :placeholder => "E-mail" %>
                                    </div>
                                  </div>
                                </div>
                              </div>
                            </div>

                            <div class="form-group">
                              <div class=" inputGroupContainer">
                                <div class="input-group">
                                  <span class="input-group-addon"><i class="glyphicon glyphicon-eye-close"></i></span>
                                  <div class="field">
                                    <div class="field">
                                      <% f.label :password, "Senha" %>
                                      <%= f.password_field :password, autocomplete: "off",class: "form-control", :placeholder => "Senha" %>
                                    </div>
                                  </div>
                                </div>
                              </div>
                            </div>

                            <% if devise_mapping.rememberable? -%>
                              <div class="field" align="center">
                                <%= f.check_box :remember_me %>
                                <%= f.label :remember_me, "Lembrar" %>
                              </div>
                            <% end %>

                            <div class="actions" align="center">
                              <button type="submit" class="btn btn-primary" >Entrar <span class="glyphicon glyphicon-log-in"></span></button>
                            </div>
                          <% end %>
                          <br/>
                      <div class="bottom text-center">
                          NÃ£o tem cadastro?
                            <a class="btn btn-warning" href="users/sign_up" >Cadastre-se <span class="glyphicon glyphicon-send"></span></a>
                            <br/>
                      </div>
                    </div>
             </div>
        </li>
    </ul>
  </li>
<% end %>
