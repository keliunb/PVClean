<p id="notice"><%= notice %></p>

<h1>Listing Routines</h1>

<table>
  <thead>
    <tr>
      <th>Task</th>
      <th>Time</th>
      <th>Enable</th>
      <th>Monthly</th>
      <th>Sunday</th>
      <th>Monday</th>
      <th>Tuesday</th>
      <th>Wednesday</th>
      <th>Thursday</th>
      <th>Friday</th>
      <th>Saturday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routines.each do |routine| %>
      <tr>
        <td><%= routine.task.description %></td>
        <td><%= routine.time %></td>
        <td><%= routine.enable %></td>
        <td><%= routine.monthly %></td>
        <td><%= routine.sunday %></td>
        <td><%= routine.monday %></td>
        <td><%= routine.tuesday %></td>
        <td><%= routine.wednesday %></td>
        <td><%= routine.thursday %></td>
        <td><%= routine.friday %></td>
        <td><%= routine.saturday %></td>
        <td><%= link_to 'Show', routine %></td>
        <td><%= link_to 'Edit', edit_routine_path(routine) %></td>
        <td><%= link_to 'Destroy', routine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

